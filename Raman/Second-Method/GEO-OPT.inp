&FORCE_EVAL
  METHOD QUICKSTEP
  &DFT
    &QS
        EPS_DEFAULT 1.0E-14
    &END QS
    &REAL_TIME_PROPAGATION
       MAX_ITER 10 
       MAT_EXP TAYLOR
       EPS_ITER 1.0E-12
       INITIAL_WFN SCF_WFN
       DELTA_PULSE_DIRECTION 0 0 1
    &END REAL_TIME_PROPAGATION
    &EFIELD
       INTENSITY 5.0E-2
       POLARISATION 1 0 0
       WAVELENGTH [nm] 514
       ENVELOP CONSTANT
       &CONSTANT_ENV
         START_STEP 1
         END_STEP 2
       &END CONSTANT_ENV
    &END EFIELD
    BASIS_SET_FILE_NAME ./BASIS_SET
    POTENTIAL_FILE_NAME ./POTENTIALS
    &MGRID
      CUTOFF 800
    &END MGRID
    &SCF
      MAX_SCF 50
      EPS_SCF 1.0E-12
      SCF_GUESS RESTART 
      &OUTER_SCF
         MAX_SCF 50
         EPS_SCF 1E-10
      &END OUTER_SCF
    &END SCF
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
    &PRINT
      &MOMENTS
        !MAX_MOMENT 1
        !&EACH
        !  MD 1
        !&END EACH
        PERIODIC .FALSE.
      &END MOMENTS
      &EFIELD_CUBE
        !&EACH
        !  TDDFT_SCF
        !&END
        !STRIDE 297 297 297
        STRIDE 10 10 10
      &END EFIELD_CUBE
    &END PRINT
    &POISSON
       POISSON_SOLVER  WAVELET
       PERIODIC NONE 
       &WAVELET
         SCF_TYPE  100
       &END WAVELET
    &END POISSON
  &END DFT
  &SUBSYS
    &CELL
      ABC 11.0 11.0 11.0
      PERIODIC NONE
    &END CELL
    &TOPOLOGY
      COORD_FILE_FORMAT XYZ
      COORD_FILE_NAME pyridine.xyz
      &CENTER_COORDINATES
      &END CENTER_COORDINATES
    &END TOPOLOGY
    &KIND H
      BASIS_SET DZVP-GTH-PBE
      POTENTIAL GTH-PBE-q1
    &END KIND
    &KIND C 
      BASIS_SET DZVP-GTH-PBE
      POTENTIAL GTH-PBE-q4
    &END KIND
    &KIND N 
      BASIS_SET DZVP-GTH-PBE
      POTENTIAL GTH-PBE-q5
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
&GLOBAL
  PROJECT Pyridine
  RUN_TYPE RT_PROPAGATION
  PRINT_LEVEL LOW
  EXTENDED_FFT_LENGTHS
&END GLOBAL
&MOTION
  &MD
    ENSEMBLE NVE 
    !STEPS 3428
    STEPS 2000
    TIMESTEP [au_t] 0.1
  &END MD
&END MOTION
&EXT_RESTART
  RESTART_RTP .TRUE.
&END EXT_RESTART
